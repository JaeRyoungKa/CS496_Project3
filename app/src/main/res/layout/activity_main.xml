<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.cs496.weather_app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Loading.."
        android:textSize="30dp"
        android:id="@+id/location"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:font="custom1"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="00"
        android:id="@+id/temperature"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_00"
        android:layout_below="@+id/temperature"
        android:layout_marginTop="80dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_03"
        android:layout_below="@+id/temp_00"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_06"
        android:layout_below="@+id/temp_03"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_09"
        android:layout_below="@+id/temp_06"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_12"
        android:layout_below="@+id/temp_09"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_15"
        android:layout_below="@+id/temp_12"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_18"
        android:layout_below="@+id/temp_15"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="00.00"
        android:id="@+id/temp_21"
        android:layout_below="@+id/temp_18"
        android:layout_marginTop="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail"
        android:text="지구 멸망"
        android:textSize="24dp"
        android:layout_below="@+id/temperature"
        android:layout_marginTop="18dp"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center" />

</RelativeLayout>
</ScrollView>

